<%= form_with model: task, url: project_tasks_path  do |form| %>
  <div class="mb-6">
    <%= form.label :name, class: 'text-bold inline-block text-lg mb-2 font-bold ' %>
    <%= form.text_field :name, class: 'border border-gray-200 rounded p-2 w-full', placeholder: 'Task name', required: true %>
  </div>

  <div class="mb-6">
    <%= form.label :description, class: 'text-bold inline-block text-lg mb-2 font-bold ' %>
    <%= form.text_area :description, class: 'border border-gray-200 rounded p-2 w-full', placeholder: 'Description of the task' %>
  </div>

  <div class="mb-6">
    <%= form.label :start_date, class: 'text-bold inline-block text-lg font-bold mb-2' %>
    <%= form.date_field :start_date, class: 'border border-gray-200 rounded p-2 w-full', required: true  %>
  </div>

  <div class="mb-6">
    <%= form.label :end_date, class: 'text-bold inline-block text-lg font-bold mb-2' %>
    <%= form.date_field :end_date, class: 'border border-gray-200 rounded p-2 w-full', required: true  %>
  </div>

  <div class="mb-6">
    <%= form.label :completed, class: 'text-bold inline-block text-lg font-bold mb-2' %>
    <%= form.select :completed, [["Completed", true], ["Uncompleted", false]], {}, { :class => 'border border-gray-200 rounded p-2 w-full' } %>
  </div>

  <div class="flex justify-end">
    <%= link_to 'Back to project', project_path(id: params[:project_id]), class: 'text-blue-400 underline ml-4 hover:text-blue-700 py-2 px-4 rounded' %>
    <%= form.submit class: 'mr-3 rounded-md cursor-pointer bg-blue-100 px-5 py-2 px-10 hover:bg-blue-300 font-bold' %>
  </div>
<% end %>