<div class="flex justify-between mb-5">
  <%= link_to 'go back', projects_path, class: 'underline' %>
  <%= link_to 'Create task', new_project_task_path(@project.id), class: 'underline justify-end' %>
</div>

<div>
  <h1 class="font-bold text-2xl"><%= @project.name %></h1>
  <%= @project.start_date %>
  <%= @project.end_date %>
</div>

<%= link_to 'Edit project', edit_project_path(@project), class: 'underline' %>
<%= link_to 'Delete project', project_path(@project), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this project?' }, class: 'underline' %>

<div class="mt-5">
  <% if @tasks.count > 0 %>
    <h2 class="font-bold text-xl">My tasks</h2>

    <% @tasks.each do |task| %>
      <ol>
        <li>
          <%= link_to project_task_path(task.project_id, task.id), class: 'underline' do %>
            <%= task.name %>
          <% end %>
        </li>
      </ol>
    <% end %>
    
  <% else %>
    <p>There is no tasks associate with this project</p>
  <% end %>
</div>