<%= form_with model: project do |form| %>
  <div class="mb-5 flex justify-center items-center">
    <%= form.label :name, class: 'text-gray-700 font-bold text-xl' %>
    <%= form.text_field :name, class: 'border rounded-lg py-4 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', required: true, placeholder: 'Project name' %>
  </div>

  <div class="inline mb-5">
    <%= form.label :file, 'Choose a file to upload: ', class: 'text-gray-700 font-bold text-xl' %>
    <%= form.file_field :file, class: 'border rounded-lg py-4 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', required: true, accept: '.mpp' %>
  </div>

  <div class="flex justify-center">
    <%= form.submit 'Send', class: 'm-3 rounded-md cursor-pointer bg-blue-100 px-5 py-2 hover:bg-blue-300 font-bold' %>
  </div>
<% end %>