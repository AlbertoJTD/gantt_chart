<%= form_with model: project do |form| %>
  <div class="mb-6">
    <%= form.label :name, class: 'inline-block font-bold text-xl mb-2 text-gray-700' %>
    <%= form.text_field :name, class: 'border border-gray-200 rounded p-2 w-full', required: true, placeholder: 'Project name' %>
  </div>

  <div class="mb-6">
    <%= form.label :file, 'Choose a file to upload', class: 'inline-block text-lg mb-2 text-gray-700 font-bold text-xl' %>
    <%= form.file_field :file, class: 'bg-white border rounded-lg py-4 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline w-full', required: true, accept: '.mpp' %>
  </div>

  <div class="flex justify-end">
    <%= link_to 'Back to projects', projects_path, class: 'text-blue-400 underline ml-4 hover:text-blue-700 py-2 px-4 rounded' unless current_page?('/') %>
    <%= form.submit class: 'mr-3 rounded-md cursor-pointer bg-blue-100 px-5 py-2 px-10 hover:bg-blue-300 font-bold' %>
  </div>
<% end %>