<tr class="hover:bg-gray-50">
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="flex items-center">
      <div class="ml-4">
        <%= link_to project_path(project) do %>
          <div class="text-sm font-medium text-blue-900 underline">
            <%= project.name %>
          </div>
        <% end %>
      </div>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= project.start_date.strftime("%A, %B %d, %Y") %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= project.end_date.strftime("%A, %B %d, %Y") %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <div class="flex justify-between items-center">
      <%= link_to project_gantt_chart_index_path(project.id), class: 'inline-flex items-center pl-1.5 pr-3 md:pl-2 md:pr-4 py-1.5 border border-transparent text-sm md:text-md leading-4 font-bold rounded-lg text-gray-900 bg-cyan-300 hover:bg-cyan-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-turquoise-500' do %>
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5m.75-9l3-3 2.148 2.148A12.061 12.061 0 0116.5 7.605" />
          </svg>
        </span>
        Gantt chart
      <% end %>
      <%= link_to 'Edit', edit_project_path(project), class: 'text-indigo-600 hover:text-indigo-900' %>
      <%= link_to 'Delete', project_path(project), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this project?' }, class: 'text-red-600 hover:text-red-900' %>
    </div>
  </td>
</tr>
